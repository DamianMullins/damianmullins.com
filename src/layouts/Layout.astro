---
import { ClientRouter } from 'astro:transitions'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import { SITE_TITLE, AUTHOR_BIO } from '@/consts'
import '@/styles/global.css'

interface Props {
  title?: string
  description?: string
}

const { title, description = AUTHOR_BIO } = Astro.props
const pageTitle = title ? `${title} â€” ${SITE_TITLE}` : SITE_TITLE
const version = import.meta.env.PUBLIC_RELEASE_VERSION ?? ''
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="release" content={version} />
    <link
      rel="icon"
      type="image/png"
      sizes="48x48"
      href="/icons/icon-48x48.png"
    />
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta
      name="theme-color"
      content="#f8f3eb"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#1e1c1a"
      media="(prefers-color-scheme: dark)"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,700;1,400;1,500&family=Playfair+Display:wght@700&display=swap"
      rel="stylesheet"
    />
    <!-- Prevent flash of wrong theme -->
    <script is:inline>
      ;(function () {
        const saved = localStorage.getItem('theme')
        if (
          saved === 'dark' ||
          (!saved && window.matchMedia('(prefers-color-scheme: dark)').matches)
        ) {
          document.documentElement.classList.add('dark')
        } else {
          document.documentElement.classList.remove('dark')
        }
      })()

      document.addEventListener('astro:before-swap', e => {
        const saved = localStorage.getItem('theme')
        const isDark =
          saved === 'dark' ||
          (!saved && window.matchMedia('(prefers-color-scheme: dark)').matches)
        e.newDocument.documentElement.classList.toggle('dark', isDark)
      })
    </script>
    <!-- Google Analytics -->
    <script
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-NMJS073VTS"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())
      gtag('config', 'G-NMJS073VTS', { anonymize_ip: true })
    </script>
    <slot name="head" />
    <ClientRouter />
  </head>
  <body>
    <Header />

    <main class="mx-auto max-w-[680px] px-6 py-10">
      <slot />
    </main>

    <Footer />

    <script>
      import '@/scripts/logrocket'
    </script>
  </body>
</html>
